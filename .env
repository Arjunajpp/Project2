# Base Site URL
app.baseURL = 'http://localhost:8080/'

# CSRF Protection
security.CSRFProtection = true
security.CSRFTokenName = 'csrf_test_name'
security.CSRFHeaderName = 'X-CSRF-TOKEN'
security.CSRFExpire = 7200
security.CSRFRegenerate = true
security.CSRFRedirect = true

# Environment
CI_ENVIRONMENT = development

# Display Debugger
app.debug = true  # Set to false in production

# Encryption Key
encryption.key = 'd15bf4b27f71cbfe9173c964d2a5c0530cc8e1642a5e2edc2266935023004cff'

# Database Configuration
database.default.hostname = localhost
database.default.database = sarpras2
database.default.username = root
database.default.password =
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci
database.default.saveQueries = true

# Session Configuration
sessionDriver = 'CodeIgniter\Session\Handlers\DatabaseHandler'
sessionSavePath = 'ci_sessions'
sessionCookieName = 'ci_session'
sessionExpiration = 7200
sessionMatchIP = false
sessionTimeToUpdate = 300
sessionRegenerateDestroy = false

# Email Configuration
email.protocol = smtp
email.SMTPHost = smtp.mailtrap.io
email.SMTPUser = smtp_user
email.SMTPPass = smtp_pass
email.SMTPPort = 587
email.SMTPCrypto = tls
email.mailType = html
email.charset = utf-8
email.wordWrap = true

# Logging Configuration
logger.threshold = 4
logger.filePath = ''
logger.fileExt = 'log'
logger.dateFormat = 'Y-m-d H:i:s'

# Cache Configuration
cache.handler = file
cache.backupHandler = dummy
cache.storePath = WRITEPATH/cache/
cache.fileExt = '.ci_cache'
cache.defaultTTL = 60

# Cookie Configuration
app.cookiePrefix   = ''
app.cookieDomain   = ''
app.cookiePath     = '/'
app.cookieSecure   = false
app.cookieHTTPOnly = true

# Content Security Policy
app.CSPEnabled = false  # Disable for development

# Default Timezone
app.appTimezone = 'Asia/Jakarta'
